<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_games_list_list_item_wrapper"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/fragment_conversations_list_list_item_background"
    android:paddingBottom="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp" >

    <ImageView
        android:id="@+id/fragment_games_list_list_item_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:src="@null" />

    <TextView
        android:id="@+id/fragment_games_list_list_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/fragment_games_list_list_item_image"
        android:text="Conversation Name"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/fragment_games_list_list_item_subtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment_games_list_list_item_text"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@+id/fragment_games_list_list_item_image"
        android:autoLink="all"
        android:ellipsize="end"
        android:lines="1"
        android:linksClickable="false"
        android:text="This is the most recent message"
        android:textColor="#444444"
        android:textSize="16sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/fragment_games_list_list_item_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:background="#99CC00"
        android:paddingBottom="2dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="2dp"
        android:text="3"
        android:textColor="#000000"
        android:textSize="18sp"
        android:visibility="invisible" />

</RelativeLayout>